{
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.rulers": [88],
    "editor.tabSize": 4
  },
  "files.exclude": {
    "**/__pycache__": true,
    "**/.mypy_cache": true,
    "**/.pytest_cache": true,
    "**/.venv": true
  },
  "flake8.args": ["--max-line-length=88", "--ignore=E203,E226,W503"],
  "mypy-type-checker.args": ["--ignore-missing-imports"],
  "mypy-type-checker.path": ["${workspaceFolder}/.venv/Lib/site-packages"],
  "python.analysis.completeFunctionParens": true,
  "python.analysis.extraPaths": ["{$workspaceFolder}/.venv/Lib/site-packages"],
  "python.autoComplete.extraPaths": [
    "{$workspaceFolder}/.venv/Lib/site-packages"
  ],
  "python.languageServer": "Pylance",
  "python.terminal.activateEnvInCurrentTerminal": true,
  "python.testing.pytestArgs": ["tests"],
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false
}

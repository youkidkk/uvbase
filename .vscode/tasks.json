{
  "version": "2.0.0",
  "tasks": [
    {
      "group": "build",
      "label": "build",
      "type": "shell",
      "command": "uv",
      "args": [
        "run",
        "pyinstaller",
        "${workspaceFolderBasename}/__main__.py",
        "--onefile",
        "--name",
        "${workspaceFolderBasename}",
        "--clean"
      ]
    }
  ]
}
